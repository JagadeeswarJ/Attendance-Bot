<html>
  <head>
    <title>Attendance Bot</title>
    <hta:application
      id="oHTA"
      applicationname="Attendance Bot"
      showintaskbar="yes"
      border="thin"
      borderstyle="normal"
      caption="yes"
      windowstate="normal"
      maximizebutton="no"
      minimizebutton="no"
      sysmenu="yes"
      scroll="no"
    />
    <style>
      body {
        font-family: Segoe UI;
        text-align: center;
        margin: 20px;
        background: #f0f0f0;
      }
      .container {
        background: white;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        max-width: 500px;
        margin: auto;
      }
      h2 {
        color: #0078d7;
        margin-top: 0;
      }
      #progress {
        width: 300px;
        height: 20px;
        border: 1px solid #ccc;
        margin: 20px auto;
        border-radius: 10px;
        overflow: hidden;
      }
      #result {
        text-align: left;
        margin-top: 20px;
        display: none;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h2>Fetching Attendance Data</h2>
      <div id="progress">
        <div
          style="
            width: 0%;
            height: 100%;
            background: #0078d7;
            transition: width 0.3s;
          "
        ></div>
      </div>
      <div id="result"></div>
    </div>

    <script language="VBScript">
      Sub runBatchSilently()
          Dim shell
          Set shell = CreateObject("WScript.Shell")
          shell.Run "cmd /c ""E:\079_data\scripts\attendance.bat""", 0, False
      End Sub
    </script>

    <script>
      var progress = 0;
      var interval = setInterval(function () {
        progress += 5;
        document.getElementById("progress").children[0].style.width =
          progress + "%";
        if (progress >= 100) {
          clearInterval(interval);
          setTimeout(function () {
            document.getElementById("progress").style.display = "none";
            runBatchSilently();
          }, 300);
        }
      }, 200);
    </script>
  </body>
</html>
